%li{:id => dom_id(movie)}
  = link_to movie.title, movie, :class => 'colorbox-link'
  - if !@profile_user
    %span{ :class => "to" }
      = link_to image_tag("watched.png"), watch_this_movie_path(movie), :title => 'Mark as watched'
      = link_to image_tag("cancel.png"), movie, :method => :delete, :title => 'Remove'

