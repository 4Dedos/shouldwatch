<%= page_replace('want_to_watch_list', '/home/want_to_watch_list') %>

$("li#recommended_to_me_<%= dom_id(@movie)%>").remove();

<%- if @recommended_to_me.blank? %>
  $("ul#recommended_to_me").html('<li>Empty list</li>')
<% end %>  

<%= page_replace_html('watched_count', {:text => current_user.i_have_watched_count})%>
<%= page_replace_html('want_to_watch_count', {:text => current_user.i_should_watch_list.size})%>
<%= page_highlight("#{dom_id(@movie)} a.colorbox-link", {:color => '#FDE722'}) %>
<% if show_warning? %>
  $('.warning').show();
<% end %>

