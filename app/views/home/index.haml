.header
  .inner
    .shouldWatch
      %h1 Should Watch
    .logIn
      %p
        - if current_user.guest?
          = link_to '/auth/twitter' do
            = image_tag '/images/sign-in-with-twitter-l.png', :alt => t('.sign_in_with_twitter'), :title => t('.sign_in_with_twitter')
        - else
          = image_tag '/images/bird_16_gray.png'
          = link_to t('.sign_out'), signout_path
    %ul.menu
      %li#wantToWatchSection_li.selected
        = link_to_function t('.i_want_to_watch'), "scrollToSection('#wantToWatchSection');"
      %li#recommendedSection_li
        = link_to_function t('.recommended_to_me'), "scrollToSection('#recommendedSection');"
      %li#recommendSection_li
        = link_to_function t('.i_recommend'), "scrollToSection('#recommendSection');"
    .userPanel
      = render '/home/user_panel'
    .search
      = render '/home/search'
.pageContent
  .lists
    .section.wantToWatch
      #wantToWatchSection.anchor
      %h2
        = t('.i_want_to_watch')
        /%span.warning{:style => display_if(show_warning?)}= '*'
      = render '/home/want_to_watch_list'
    .section.recommended
      #recommendedSection.anchor
      %h2= t('.my_friends_recommends')
      %ul
        - if @recommended_to_me.blank?
          %li= t('.empty_list')
        = render :partial => '/movies/recommended_to_me', :collection => @recommended_to_me, :as => :movie
      .addMore
        %a{:href => "#"} Ask for recommendations
    .section.recommend
      #recommendSection.anchor
      %h2= t('.i_recommend')
      %ul
        - if @i_recommend.blank?
          %p.empty
            Start making recommendations. Click on any movie and use the recommendation tool to tell your friends what movies they should watch.
        = render :partial => '/movies/i_recommend', :collection => @i_recommend, :as => :movie

- if @popup_template
  #popup{:style => 'display:none;' }
    = render :template => @popup_template

.footer
  .inner
    = link_to 'Welcome', '/welcome?s=footer', :class => 'colorbox-link'
    |
    = link_to 'About The Team', '/about', :class => 'colorbox-link'

