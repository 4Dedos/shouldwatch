.header
  .inner
    .shouldWatch
      %h1 Should Watch
    .logIn
      %p
        - if current_user.guest?
          = link_to t('.sign_in_with_twitter'), '/auth/twitter'
        - else
          = link_to t('.sign_out'), signout_path
    %ul.menu
      %li.selected
        = link_to_function t('.i_want_to_watch'), "$.scrollTo( '#wantToWatchSection', 800, {duration:3000} );"
      %li
        = link_to_function t('.i_recommend'), "$.scrollTo( '#recommendSection', 800, {duration:3000} );"
      %li
        = link_to_function t('.recommended_to_me'), "$.scrollTo( '#recommendedSection', 800, {duration:3000} );"
    .userPanel
      = render '/home/user_panel'
    .search
      = render '/home/search'
.pageContent
  .lists
    .section.wantToWatch
      #wantToWatchSection.anchor
      %h2
        = t('.i_want_to_watch')
        /%span.warning{:style => display_if(show_warning?)}= '*'
      = render '/home/want_to_watch_list'
    .section.recommend
      #recommendSection.anchor
      %h2= t('.i_recommend')
      %ul
        - if @i_recommend.blank?
          %li= t('.empty_list')
        = render :partial => '/movies/i_recommend', :collection => @i_recommend, :as => :movie
    .section.recommended
      #recommendedSection.anchor
      %h2= t('.my_friends_recommends')
      %ul
        - if @recommended_to_me.blank?
          %li= t('.empty_list')
        = render :partial => '/movies/recommended_to_me', :collection => @recommended_to_me, :as => :movie
    .addMore
      %a{:href => "#"} Get more recommendations from your friends


- if @popup_template
  #popup{:style => 'display:none;' }
    = render :template => @popup_template

.footer
  .inner
    = link_to 'About', '/about', :class => 'colorbox-link'

