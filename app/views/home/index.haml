.header
  .inner
    .shouldWatch
      %h1 Should Watch
    .logIn
      %p
        = link_to t('.sign_in_with_twitter'), '/auth/twitter' 
    %ul.menu
      %li.selected
        = link_to_function t('.i_want_to_watch'), "$.scrollTo( '#wantToWatchSection', 800, {duration:3000} );"
      %li
        = link_to_function t('.i_recommend'), "$.scrollTo( '#recommendSection', 800, {duration:3000} );"
      %li
        = link_to_function t('.recommended_to_me'), "$.scrollTo( '#recommnedSection', 800, {duration:3000} );"
    .userPanel
      .user
        %span.pic{:style => "background-image:url(images/temp/userpic.gif);"}
        %span.name User name
        = image_tag('baseImages/clip.png', :class => 'clip')
      .stats
        .watched
          %span.amount 37
          %span.when
            = t('.watched')
            = link_to t('.this_month'), '#'     
